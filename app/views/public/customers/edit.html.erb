<h1>会員情報編集Public::Customers#edit</h1>
<p>Find me in app/views/public/customers/edit.html.erb</p>

<%= form_with model: @customer, url: public_customers_path, method: :patch do |f| %>

<div class="field">
   <p>氏名
    <%= f.label :"(姓)" %>
     <%= f.text_field :last_name %>

    <%= f.label :"(名)" %>
     <%= f.text_field :first_name %>
   </p>
  </div>

  <div class="field">
   <p>フリガナ
    <%= f.label :"(セイ)" %>
     <%= f.text_field :last_name_kana %>
    <%= f.label :"(メイ)" %>
     <%= f.text_field :first_name_kana %>
   </p>
  </div>



  <div class="field">
   <%= f.label :"郵便番号(ハイフンなし)" %>
   <%= f.text_field :postal_code %>
  </div>

  <div class="field">
   <%= f.label :"住所" %>
   <%= f.text_field :address %>
  </div>

  <div class="field">
   <%= f.label :"電話番号" %>
   <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

<%= link_to"退会する", withdrawal_public_customers_path %>