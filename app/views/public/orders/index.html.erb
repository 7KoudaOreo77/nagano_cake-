<h1>注文履歴一覧Public::Orders#index</h1>
<p>Find me in app/views/public/orders/index.html.erb</p>

<table>
  <thead>
   <th>注文日</th>
   <th>配送先</th>
   <th>注文商品</th>
   <th>支払金額</th>
   <th>ステータス</th>
   <th>注文詳細</th>
  </thead>
  <tbody>
  <% @orders.each do |order| %>

   <tr>
    <td><%= order.created_at.strftime("%Y-%m-%d %X") %></td>
    <td>
      <span>〒</span><%= order.postal_code %></br>
      <%= order.address %></br>
      <%= order.name%>
    </td>
    <% order.order_details.each do |order_detail| %>
     <td><%= order_detail.item.name %></td>
    <% end %>
    <td><%= order.total_payment %>円</td>
    <td><%= order.status_i18n %>


    </td>
    <td><%= link_to"表示する", public_order_path(order.id) %></td>
   </tr>
  <% end %>
  </tbody>
 </table>