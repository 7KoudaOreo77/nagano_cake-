<h1>商品一覧Public::Items#index</h1>
<p>全<%= @items.count %>件Find me in app/views/public/items/index.html.erb</p>

<% @items.each do |item| %>
 <% if item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

 <p>
  <%= link_to public_item_path(item.id) do %>
   <%= item.name %>
  <% end %>
 </p>

 <p>¥<%= item.price %></p>

<% end %>