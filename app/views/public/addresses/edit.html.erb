<h1>配送先編集Public::Addresses#edit</h1>
<p>Find me in app/views/public/addresses/edit.html.erb</p>

<%= form_with model: @address, url: public_address_path(@address), method: :patch do |f| %>

  <div class="field">
   <%= f.label :"郵便番号(ハイフンなし)" %>
   <%= f.text_field :postal_code %>
  </div>

  <div class="field">
   <%= f.label :"住所" %>
   <%= f.text_field :address %>
  </div>

  <div class="field">
   <%= f.label :"宛名" %>
   <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit "変更内容を保存" %>
  </div>
<% end %>