<h1>配送先登録/一覧Public::Addresses#index</h1>
<p>Find me in app/views/public/addresses/index.html.erb</p>

<%= form_with model: @address_new, url: public_addresses_path do |f| %>
 <div class="field">
  <%= f.label :"郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code %>
 </div>

 <div class="field">
  <%= f.label :"住所" %>
  <%= f.text_field :address %>
 </div>

 <div class="field">
   <%= f.label :"宛名" %>
   <%= f.text_field :name %>
 </div>

 <%= f.submit '新規登録' %>
<% end %>


<% @addresses.each do |address| %>
 <p>郵便番号(ハイフンなし)</p><%= address.postal_code %>
 <p>住所</p><%= address.address %>
 <p>宛名</p><%= address.name %>
 <%= link_to "編集する" ,edit_public_address_path(address.id) %>
 <%= link_to "削除する" ,public_address_path(address.id), method: :delete %>

<% end %>