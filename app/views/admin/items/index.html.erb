<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>

<h4>商品一覧</h4>
<%= link_to "+", new_admin_item_path %>

<% @items.each do |item| %>

  <P>商品ID</P>
  <%= item.id %>
  <P>商品名</P>
  <%= link_to admin_item_path(item.id) do %>
   <%= item.name %>
  <% end %>
  <P>税抜価格</P>
   <%= item.price %>
  <P>ジャンル</P>

   <%= item.genre.name %>

  <p>ステータス</p>
   <% if item.is_active %>
    <p>販売中</p>
   <% else %>
    <p>販売停止中</p>
   <% end%>
  </br>

<% end %>