<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>

<h5>商品新規登録</h5>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
 <p>商品画像</p><%= f.file_field :image, accept: "image/*" %>
 <P>商品名</P><%= f.text_field :name %>
 <P>商品説明</P><%= f.text_area :introduction %>
 <P>ジャンル</P><%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択をしてください--") %>
 <P>税抜価格</P><%= f.text_field :price %>円
 <P>販売ステータス</P>
  <%= f.radio_button :is_active, "true" %>
  <%= f.label :is_active, "販売中" %>

  <%= f.radio_button :is_active, "false" %>
  <%= f.label :is_active, "販売停止中" %></br>
 <%= f.submit '新規登録' %>
<% end %>

