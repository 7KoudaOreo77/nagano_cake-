<div class="bg-secondary">管理者ログイン</div>

<div class="text-center">
<%= form_with model: @admin, url: admin_session_path do |f| %>
 <div class="field">
    <span class="label"><%= f.label :メールアドレス %></span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <span class="label"><%= f.label :パスワード %></span>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class:'btn btn-sm btn-primary' %>
  </div>
<% end %>
</div>

<%= render "admin/shared/links" %>
